<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <!-- Toolbar include -->
    <include
        android:id="@+id/toolar"
        layout="@layout/custom_tool_bar" />

    <!-- Header RelativeLayout -->
    <RelativeLayout
        android:id="@+id/headerRelativeBooking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolar">

        <!-- Add User TextView -->
        <TextView
            android:id="@+id/txtAddUSer"
            style="@style/EditText.Login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            android:singleLine="true"
            android:text="Add New"
            android:textColor="@color/colorWhite"
            android:textSize="16sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <!-- Main Content LinearLayout -->
    <LinearLayout
        android:id="@+id/MainLinearView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/headerRelativeBooking"
        android:layout_marginTop="8dp"
        android:background="@color/color_light_gray"
        android:orientation="vertical">

        <!-- Nested Linear Layouts -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Row for TextViews -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:weightSum="4">

                <!-- First Name TextView -->
                <TextView
                    android:id="@+id/txtStkId"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:maxLines="2"
                    android:text="Full Name"
                    android:textColor="@color/color_black"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <!-- Last Name TextView -->
                <TextView
                    android:id="@+id/txtStkName"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:visibility="gone"
                    android:gravity="center"
                    android:maxLines="2"
                    android:text="Last Name"
                    android:textColor="@color/color_black"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <!-- DOB TextView -->
                <TextView
                    android:id="@+id/txtBgtTarget"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:maxLines="2"
                    android:text="DOB"
                    android:textColor="@color/color_black"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <!-- Job Type TextView -->
                <TextView
                    android:id="@+id/txtThreshold"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:maxLines="2"
                    android:text="Job Type"
                    android:textColor="@color/color_black"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_light_gray" />
        </LinearLayout>

        <!-- Bottom Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_black" />
    </LinearLayout>

    <!-- SwipeRefreshLayout with RecyclerView -->
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/srLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/MainLinearView">

        <!-- RecyclerView for displaying data -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/samraddhiiRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp" />
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</RelativeLayout>
