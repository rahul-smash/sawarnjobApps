<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:orientation="vertical">



    <include layout="@layout/custom_tool_bar"
        android:id="@+id/toolar"/>
    <ScrollView
        android:layout_below="@+id/toolar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout

            android:id="@+id/ll_sign_in"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:orientation="vertical"
            android:padding="24dp"
            android:visibility="visible">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txtInputFirstName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"

                android:hint="First Name"
                android:imeOptions="actionNext"
                app:boxBackgroundMode="none">

                <EditText
                    android:id="@+id/etFirstName"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/edittext_bg"
                    android:gravity="center|left"
                    android:paddingTop="0dp"
                    android:paddingBottom="0dp"
                    android:singleLine="true" />


            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txtInputLastName"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Last Name"
                android:imeOptions="actionNext"
                app:boxBackgroundMode="none">

                <EditText
                    android:id="@+id/etLastName"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/edittext_bg"
                    android:gravity="center|left"
                    android:paddingTop="0dp"
                    android:paddingBottom="0dp"
                    android:singleLine="true" />


            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txtInputEmail"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Email"
                android:imeOptions="actionNext"
                app:boxBackgroundMode="none">

                <EditText
                    android:id="@+id/etEmail"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/edittext_bg"
                    android:gravity="center|left"
                    android:paddingTop="0dp"
                    android:paddingBottom="0dp"
                    android:singleLine="true" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txtInputPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"

                android:hint="Phone"
                android:imeOptions="actionNext"
                app:boxBackgroundMode="none">

                <EditText
                    android:id="@+id/etPhone"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/edittext_bg"
                    android:gravity="center|left"
                    android:inputType="number"
                    android:paddingTop="0dp"
                    android:paddingBottom="0dp"
                    android:singleLine="true" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txtInputStartDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"

                android:hint="Date Of Birth"
                android:imeOptions="actionNext"
                app:boxBackgroundMode="none">

                <EditText
                    android:id="@+id/etStartDate"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"

                    android:background="@drawable/edittext_bg"
                    android:drawableEnd="@drawable/calendericon"
                    android:editable="false"
                    android:focusable="false"
                    android:gravity="center|left"

                    android:paddingTop="0dp"
                    android:paddingBottom="0dp"
                    android:singleLine="true" />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txtInputEndDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"

                android:hint="Looking For Job Type"
                android:imeOptions="actionNext"
                app:boxBackgroundMode="none">

                <EditText
                    android:id="@+id/etLookingJobType"
                    android:layout_width="match_parent"

                    android:layout_height="50dp"

                    android:background="@drawable/edittext_bg"
                    android:gravity="center|left"

                    android:paddingTop="0dp"
                    android:paddingBottom="0dp"
                    android:singleLine="true" />


            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txtInputLocation"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"

                android:hint="Location"
                android:imeOptions="actionNext"
                app:boxBackgroundMode="none">

                <EditText
                    android:id="@+id/etLocation"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@drawable/edittext_bg"
                    android:gravity="left"
                    android:singleLine="true" />

            </com.google.android.material.textfield.TextInputLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_sign_in"
                android:layout_marginTop="10dp"

                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radioButtonRememberMe"
                    style="@style/TextAppearance.AppCompat.Small"

                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:background="@android:color/transparent"
                    android:checked="false"
                    android:text="Remember me"
                    android:textColor="@color/color_dark_gray"
                    android:textSize="15dp"
                    android:visibility="gone" />


            </RelativeLayout>

            <TextView
                android:id="@+id/verify_btn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="right"
                android:layout_marginTop="10dp"

                android:background="@drawable/edittext_bg"

                android:gravity="center"
                android:padding="10dp"
                android:text="Save Changes"
                android:textColor="@color/color_black"
                android:textSize="@dimen/text_size_normal"
                android:visibility="visible" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="right"
                android:layout_marginTop="20dp"
                android:background="@color/goldencolor"
                android:contentDescription=""
                android:gravity="center"
                android:minHeight="10dp"
                android:padding="10dp"
                android:text="Next"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text_size_normal"
                android:visibility="invisible" />

        </LinearLayout>


    </ScrollView>
</RelativeLayout>