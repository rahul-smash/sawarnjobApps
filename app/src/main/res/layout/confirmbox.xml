<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/llErrorDialog"
    android:background="@drawable/dialog_with_round_corner"
    android:layout_margin="5dp"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_gravity="center"
    android:layout_height="wrap_content">





    <fontspackageForTextView.BoldMedium

        android:singleLine="true"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:gravity="center"
        android:textColor="@color/color_black"

        ></fontspackageForTextView.BoldMedium>



    <fontspackageForTextView.Regular
        android:id="@+id/txtError"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textColor="@color/color_black"

        ></fontspackageForTextView.Regular>

    <RelativeLayout
        android:id="@+id/relativeImage"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">


        <fontspackageForTextView.BoldMedium
            android:id="@+id/txtVehicleImage"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:drawableRight="@drawable/ic_down"
            android:gravity="center|left"
            android:hint="Take Your Selfie"

            android:tag="Selection User image is required."
            android:textColor="@color/color_black"
            android:textSize="@dimen/text_size_normal" />

        <com.sarwarajobsapp.view.RoundedImageView
            android:id="@+id/attendanceUserProfile"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/side_image" />
    </RelativeLayout>


    <LinearLayout
        android:visibility="gone"
        android:id="@+id/llShowbutton"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        >

    <fontspackageForTextView.Regular
        android:alpha=".7"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_gravity="center"
        android:id="@+id/txtNo"
        android:background="@color/colorPrimary"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:textColor="@color/colorWhite"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:text="No"
        android:gravity="center"
        android:padding="10dp"

        android:textAllCaps="true"></fontspackageForTextView.Regular>


        <fontspackageForTextView.Regular
            android:layout_gravity="center"
            android:id="@+id/txtyes"
            android:background="@color/colorPrimary"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/colorWhite"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="Yes"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:padding="10dp"

            android:textAllCaps="true"></fontspackageForTextView.Regular>


</LinearLayout>
</LinearLayout>