<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:id="@+id/llErrorDialog"
    android:background="@drawable/dialog_with_round_corner"
    android:layout_margin="25dp"
    android:orientation="vertical"
    android:padding="15dp"
    android:layout_gravity="center"
    android:layout_height="wrap_content">





    <fontspackageForTextView.BoldMedium

        android:singleLine="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:gravity="center"
        android:textColor="@color/color_black"

        ></fontspackageForTextView.BoldMedium>



    <fontspackageForTextView.Regular
        android:id="@+id/txtError"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textColor="@color/color_black"

        ></fontspackageForTextView.Regular>



    <fontspackageForTextView.Regular
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_gravity="center"
        android:id="@+id/txtNext"
        android:background="@color/colorPrimary"
        android:layout_width="139dp"
        android:textColor="@color/colorWhite"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
         android:text="Close"
        android:gravity="center"
        android:padding="10dp"

        android:textAllCaps="true"></fontspackageForTextView.Regular>



</LinearLayout>